<UserControl x:Class="JsonViewer.Controls.MegaJsonTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JsonViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- 样式和模板 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:LevelToIndentConverter x:Key="LevelToIndentConverter"/>
        
        <!-- TreeView项目容器样式 -->
        <Style x:Key="MegaTreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 节点内容 -->
                            <Border Grid.Row="0" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    MinHeight="22">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 缩进 -->
                                    <Rectangle Grid.Column="0" 
                                               Width="{Binding Level, Converter={StaticResource LevelToIndentConverter}}"
                                               Fill="Transparent"/>
                                    
                                    <!-- 展开/折叠按钮 -->
                                    <ToggleButton Grid.Column="1"
                                                  Name="Expander"
                                                  IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                  Width="18" Height="18"
                                                  Margin="2,0"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Path Name="ExpandPath"
                                              Data="M 3,7 L 9,7 L 6,11 Z"
                                              Fill="#666666"
                                              Stroke="#333333"
                                              StrokeThickness="0.5"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    
                                    <!-- 内容展示器 -->
                                    <ContentPresenter Grid.Column="2"
                                                      ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- 子项容器 -->
                            <ItemsPresenter Grid.Row="1"
                                            Name="ItemsHost"
                                            Visibility="Collapsed"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ExpandPath" Property="Data" Value="M 3,5 L 9,5 L 6,9 Z"/>
                                <Setter TargetName="ExpandPath" Property="Fill" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter TargetName="ExpandPath" Property="Fill" Value="#FFA500"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 节点数据模板 -->
        <HierarchicalDataTemplate x:Key="MegaJsonNodeTemplate" 
                                  ItemsSource="{Binding VisibleChildren}"
                                  DataType="{x:Type local:MegaJsonNode}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <!-- 节点图标 -->
                <TextBlock Text="{Binding Icon}" 
                           FontSize="14" 
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                
                <!-- 节点键名 -->
                <TextBlock Text="{Binding Key}" 
                           FontWeight="Bold" 
                           Foreground="{Binding KeyColor}"
                           VerticalAlignment="Center"/>
                
                <!-- 分隔符 -->
                <TextBlock Text=": " 
                           Margin="2,0" 
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           Visibility="{Binding HasValue, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- 节点值 -->
                <TextBlock Text="{Binding DisplayValue}" 
                           Foreground="{Binding ValueColor}"
                           FontStyle="{Binding ValueFontStyle}"
                           MaxWidth="300"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding FullValue}"
                           VerticalAlignment="Center"/>
                
                <!-- 子项数量提示 -->
                <TextBlock Text="{Binding ChildCountText}" 
                           Margin="8,0,0,0" 
                           FontSize="10" 
                           Foreground="#0078D4"
                           FontWeight="Medium"
                           VerticalAlignment="Center"
                           Visibility="{Binding ShowChildCount, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- 加载指示器 -->
                <TextBlock Text="⌛" 
                           Margin="6,0" 
                           FontSize="12" 
                           Foreground="#FFA500"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360"
                                                     Duration="0:0:1"
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 头部工具栏 -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🌲 超大JSON树形视图" 
                           FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <Button Content="展开层级" 
                        Command="{Binding ExpandLevelCommand}" 
                        Margin="0,0,5,0" Padding="8,4"/>
                        
                <Button Content="折叠全部" 
                        Command="{Binding CollapseAllCommand}" 
                        Margin="0,0,5,0" Padding="8,4"/>
                        
                <Button Content="内存清理" 
                        Command="{Binding CleanupMemoryCommand}" 
                        Margin="0,0,10,0" Padding="8,4"/>
                
                <TextBlock Text="{Binding StatusText}" 
                           VerticalAlignment="Center" 
                           Margin="10,0" 
                           Foreground="DarkBlue"/>
            </StackPanel>
        </Border>

        <!-- 主TreeView -->
        <ScrollViewer Grid.Row="1" 
                      Name="MainScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Item">
            
            <TreeView Name="MegaTreeView"
                      ItemsSource="{Binding RootNodes}"
                      ItemTemplate="{StaticResource MegaJsonNodeTemplate}"
                      ItemContainerStyle="{StaticResource MegaTreeViewItemStyle}"
                      Background="White"
                      BorderThickness="0"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Item">
                
                <!-- 虚拟化面板 -->
                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsVirtualizing="True" 
                                                VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>
            </TreeView>
        </ScrollViewer>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🔍 节点总数: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalNodes, StringFormat='{}{0:N0}'}" FontWeight="Bold" Foreground="Blue"/>
                    
                    <TextBlock Text=" | 已加载: " Margin="15,0,0,0"/>
                    <TextBlock Text="{Binding LoadedNodes, StringFormat='{}{0:N0}'}" FontWeight="Bold" Foreground="Green"/>
                    
                    <TextBlock Text=" | 内存使用: " Margin="15,0,0,0"/>
                    <TextBlock Text="{Binding MemoryUsage}" FontWeight="Bold" Foreground="Orange"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="🚀 免费高性能方案 " FontStyle="Italic" Foreground="Gray"/>
                    <TextBlock Text="支持百万级节点" FontWeight="Bold" Foreground="Purple"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>