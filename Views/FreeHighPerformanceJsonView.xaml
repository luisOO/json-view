<UserControl x:Class="JsonViewer.Views.FreeHighPerformanceJsonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:JsonViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 本地渐变定义 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#A855F7" Offset="0"/>
            <GradientStop Color="#3B82F6" Offset="0.5"/>
            <GradientStop Color="#06B6D4" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 科技感卡片样式 -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 科技感按钮样式 -->
        <Style x:Key="CyberActionButtonStyle" TargetType="Button" BasedOn="{StaticResource CyberButtonStyle}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题区域 -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="15,20">
            <StackPanel>
                <TextBlock Text="🚀 高性能JSON查看器" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                           
                <TextBlock Text="专为50MB+大文件和百万级节点设计" 
                           FontSize="14" FontStyle="Italic" 
                           Foreground="#E3F2FD" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 工具栏 -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧按钮组 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="📁 打开文件" 
                            Command="{Binding OpenFileCommand}" 
                            Style="{StaticResource ModernButtonStyle}"/>
                            
                    <Button Content="🔄 刷新" 
                            Command="{Binding RefreshCommand}" 
                            Style="{StaticResource ModernButtonStyle}"/>
                            
                    <Button Content="📊 分析结构" 
                            Command="{Binding AnalyzeStructureCommand}" 
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
                
                <!-- 中间状态信息 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="14" FontWeight="Medium" 
                               Foreground="#2C3E50" 
                               VerticalAlignment="Center"/>
                               
                    <!-- 加载动画 -->
                    <Grid Margin="10,0,0,0" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Ellipse Width="16" Height="16" 
                                 Stroke="#4A90E2" StrokeThickness="2" 
                                 StrokeDashArray="3,1">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="LoadingRotation"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360"
                                                             Duration="0:0:1"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>
                </StackPanel>
                
                <!-- 右侧工具按钮 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="🧹 清理内存" 
                            Command="{Binding CleanupMemoryCommand}" 
                            Style="{StaticResource ModernButtonStyle}"/>
                            
                    <Button Content="ℹ️ 帮助" 
                            Command="{Binding ShowHelpCommand}" 
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 上方：信息面板 -->
            <Border Grid.Row="0" Background="#FAFAFA" Padding="15">
                <StackPanel>
                    <!-- 文件信息行 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="📄 文件信息：" FontSize="14" FontWeight="Bold" 
                                   Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="文件大小：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding FileSizeText}" FontSize="12" FontWeight="Medium" 
                                   Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="节点总数：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalNodesText}" FontSize="12" FontWeight="Medium" 
                                   Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="最大深度：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding MaxDepthText}" FontSize="12" FontWeight="Medium" 
                                   Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="解析时间：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ParseTimeText}" FontSize="12" FontWeight="Medium" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 性能监控行 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⚡ 性能监控：" FontSize="14" FontWeight="Bold" 
                                   Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="内存使用：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding MemoryUsageText}" FontSize="12" FontWeight="Medium" 
                                   Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="已加载节点：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LoadedNodesText}" FontSize="12" FontWeight="Medium" 
                                   Margin="0,0,20,0" VerticalAlignment="Center"/>
                        <TextBlock Text="连接状态：" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="虚拟化渲染" FontSize="12" FontWeight="Medium" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        <!-- 科技感JSON内容区域 -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0" 
                CornerRadius="8" 
                Margin="0,0,0,8">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="10" Opacity="0.2"/>
            </Border.Effect>
            
            <Grid>
                <controls:MegaJsonTreeView x:Name="JsonTreeView"
                                           Style="{DynamicResource CyberTreeViewStyle}"
                                           Visibility="{Binding HasJsonData, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- 科技感欢迎界面 -->
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Visibility="{Binding ShowWelcome, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- 动画图标 -->
                    <Grid Width="80" Height="80" Margin="0,0,0,24">
                        <Ellipse Width="80" Height="80"
                                Fill="{DynamicResource CyberAccentGradient}"
                                Opacity="0.1">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="WelcomeScale" ScaleX="1" ScaleY="1"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="WelcomeScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           From="1" To="1.1" Duration="0:0:2"
                                                           AutoReverse="True"/>
                                            <DoubleAnimation Storyboard.TargetName="WelcomeScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           From="1" To="1.1" Duration="0:0:2"
                                                           AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        
                        <TextBlock Text="🚀" 
                                 FontSize="36" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource AccentBrush}"/>
                    </Grid>
                    
                    <TextBlock Text="Cyber JSON Viewer" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"
                               Foreground="{DynamicResource ForegroundBrush}"/>
                               
                    <TextBlock Text="高性能科技感JSON查看器" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,24"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                               
                    <Button Content="📁 选择JSON文件开始" 
                            Command="{Binding OpenFileCommand}" 
                            Style="{DynamicResource CyberButtonStyle}"
                            FontSize="16" 
                            Padding="24,12"
                            Width="200"/>
                </StackPanel>
            </Grid>
        </Border>
        </Grid>
    </Grid>
</UserControl>