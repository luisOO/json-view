<UserControl x:Class="JsonViewer.Views.UltraHighPerformanceJsonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- 转换器 -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🚀 超高性能JSON视图" 
                           FontSize="16" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <TextBlock Text="专为百万级数据设计" 
                           FontSize="12" FontStyle="Italic" 
                           VerticalAlignment="Center" 
                           Foreground="Gray"/>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           VerticalAlignment="Center" 
                           Margin="20,0,0,0"
                           Foreground="DarkBlue"/>
            </StackPanel>
        </Border>

        <!-- 主视图 -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <!-- 实际的JSON数据展示 -->
                <DataGrid x:Name="JsonDataGrid"
                          ItemsSource="{Binding JsonData}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          ScrollViewer.IsDeferredScrollingEnabled="False"
                          ScrollViewer.CanContentScroll="True"
                          AlternatingRowBackground="#F5F5F5"
                          Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <DataGrid.Columns>
                        <!-- 键名列 -->
                        <DataGridTextColumn Header="键名" 
                                            Binding="{Binding Name}" 
                                            Width="200" 
                                            CanUserResize="True"
                                            IsReadOnly="True"/>
                        
                        <!-- 值列 -->
                        <DataGridTextColumn Header="值" 
                                            Binding="{Binding Value}" 
                                            Width="300" 
                                            CanUserResize="True"
                                            IsReadOnly="True"/>
                        
                        <!-- 类型列 -->
                        <DataGridTextColumn Header="类型" 
                                            Binding="{Binding Type}" 
                                            Width="80" 
                                            CanUserResize="True"
                                            IsReadOnly="True"/>
                        
                        <!-- 路径列 -->
                        <DataGridTextColumn Header="路径" 
                                            Binding="{Binding Path}" 
                                            Width="250" 
                                            CanUserResize="True"
                                            IsReadOnly="True"/>
                    </DataGrid.Columns>
                    
                    <!-- 行样式 -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="25"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
                
                <!-- 加载状态提示 -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="正在加载超大JSON文件..." 
                               FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="使用分块加载技术，请稍候..." 
                               FontSize="12" FontStyle="Italic" 
                               HorizontalAlignment="Center" 
                               Foreground="Gray"/>
                </StackPanel>
                
                <!-- 无数据提示 -->
                <TextBlock Text="正在分析文件结构，准备展示数据..." 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="Gray"
                           Visibility="{Binding HasNoData, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{DynamicResource StatusBarBackgroundBrush}" 
                Padding="10,5" BorderThickness="0,1,0,0" 
                BorderBrush="{DynamicResource BorderBrush}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊 优化策略: " FontWeight="Bold"/>
                <TextBlock Text="分块加载 + 虚拟化渲染 + 内存优化" Foreground="Green"/>
                
                <TextBlock Text=" | 总项数: " Margin="20,0,0,0"/>
                <TextBlock Text="{Binding TotalItems, StringFormat='{}{0:N0}'}" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>