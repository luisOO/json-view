<UserControl x:Class="JsonViewer.Views.HighPerformanceJsonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- 类型颜色转换器 -->
        <Style x:Key="TypeColorStyle" TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="Tag" Value="String">
                    <Setter Property="Foreground" Value="Green"/>
                </Trigger>
                <Trigger Property="Tag" Value="Number">
                    <Setter Property="Foreground" Value="Blue"/>
                </Trigger>
                <Trigger Property="Tag" Value="Boolean">
                    <Setter Property="Foreground" Value="Purple"/>
                </Trigger>
                <Trigger Property="Tag" Value="Null">
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
                <Trigger Property="Tag" Value="Array">
                    <Setter Property="Foreground" Value="Orange"/>
                </Trigger>
                <Trigger Property="Tag" Value="Object">
                    <Setter Property="Foreground" Value="Brown"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 展开按钮样式 -->
        <Style x:Key="ExpanderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="高性能JSON视图 - " VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalRows}" VerticalAlignment="Center"/>
                <TextBlock Text=" 行数据" VerticalAlignment="Center" Margin="0,0,20,0"/>
                
                <Button Content="全部展开" Command="{Binding ExpandAllCommand}" Margin="0,0,5,0"/>
                <Button Content="全部折叠" Command="{Binding CollapseAllCommand}" Margin="0,0,5,0"/>
                <Button Content="刷新" Command="{Binding RefreshCommand}" Margin="0,0,20,0"/>
                
                <TextBlock Text="搜索: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200" Margin="5,0"/>
            </StackPanel>
        </Border>

        <!-- 高性能DataGrid -->
        <DataGrid Grid.Row="1" 
                  x:Name="JsonDataGrid"
                  ItemsSource="{Binding VisibleRows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.IsDeferredScrollingEnabled="True"
                  ScrollViewer.CanContentScroll="True"
                  AlternatingRowBackground="#F5F5F5">
            
            <DataGrid.Columns>
                <!-- 属性名列 -->
                <DataGridTemplateColumn Header="属性名" Width="300" CanUserResize="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="{Binding Level, Converter={StaticResource LevelToMarginConverter}}">
                                
                                <!-- 展开/折叠按钮 -->
                                <Button Content="{Binding ExpanderText}"
                                        Style="{StaticResource ExpanderButtonStyle}"
                                        Command="{Binding DataContext.ToggleExpandCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                                <!-- 属性名 -->
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 值列 -->
                <DataGridTemplateColumn Header="值" Width="400" CanUserResize="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}" 
                                       Tag="{Binding Type}"
                                       Style="{StaticResource TypeColorStyle}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"
                                       ToolTip="{Binding Value}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 类型列 -->
                <DataGridTextColumn Header="类型" 
                                    Binding="{Binding Type}" 
                                    Width="80" 
                                    CanUserResize="True"
                                    IsReadOnly="True"/>

                <!-- 路径列 -->
                <DataGridTextColumn Header="路径" 
                                    Binding="{Binding Path}" 
                                    Width="300" 
                                    CanUserResize="True"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>

            <!-- 行样式 -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="25"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightBlue"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="CornflowerBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{DynamicResource HeaderBackgroundBrush}" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="显示: " FontWeight="Bold"/>
                <TextBlock Text="{Binding VisibleRows.Count}"/>
                <TextBlock Text=" / "/>
                <TextBlock Text="{Binding TotalRows}"/>
                <TextBlock Text=" 行" Margin="0,0,20,0"/>
                
                <TextBlock Text="选中: " FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedItem.Path, ElementName=JsonDataGrid}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>